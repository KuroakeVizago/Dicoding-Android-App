<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Dicoding" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryVariant">@color/colorOnPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Other colors -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <!-- Text appearance -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Dicoding.Headline</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Dicoding.Body</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!-- Customize the navigation bar color -->
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <!-- Use the custom toolbar style -->
        <item name="toolbarStyle">@style/Widget.Dicoding.Toolbar</item>

        <!-- Exclude buttons and images from theming -->
        <item name="buttonStyle">@style/Widget.Dicoding.Button</item>
        <item name="imageButtonStyle">@style/Widget.Dicoding.ImageButton</item>
    </style>

    <!-- Custom Toolbar style -->
    <style name="Widget.Dicoding.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:subtitleTextColor">?attr/colorOnPrimary</item>
        <item name="android:foregroundTint">?attr/colorPrimary</item>
    </style>

    <!-- Custom style for BottomNavigationView -->
    <style name="Widget.Dicoding.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored" tools:keep="@style/Widget_Dicoding_BottomNavigation">
        <!-- Customize the background color -->
        <item name="backgroundTint">?attr/colorPrimary</item>

        <!-- Customize icon color when selected/unselected -->
        <item name="itemIconTint">?attr/colorOnPrimary</item>

        <!-- Customize text color when selected/unselected -->
        <item name="itemTextColor">?attr/colorOnPrimary</item>

        <!-- Customize selected item background color -->
        <item name="itemRippleColor">?attr/colorOnPrimary</item>

        <!-- Optional: Customize icon size -->
        <item name="itemIconSize">24dp</item>

        <!-- Optional: Customize label visibility mode (e.g., always show, selected only, or never) -->
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Custom text appearance styles -->
    <style name="TextAppearance.Dicoding.Headline" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Dicoding.Headline2" parent="TextAppearance.MaterialComponents.Headline1" tools:keep="@style/TextAppearance_Dicoding_Headline2">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Dicoding.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Dicoding.Button" parent="Widget.MaterialComponents.Button">
        <!-- Button background and text color remain the same in both themes -->
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Dicoding.ImageButton" parent="Widget.AppCompat.ImageButton">
        <!-- Button background and text color remain the same in both themes -->
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>
</resources>